{
  "name": "website",
  "version": "1.0.0",
  "description": "website Leodg",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "clean": "del-cli --force \"dist\"",
    "watch:css": "npx @tailwindcss/cli -i ./src/styles/main.css -o ./dist/css/main.css --watch",
    "watch:html": "copy-and-watch --watch \"src/*.html\" dist",
    "watch:js": "esbuild -watch src/scripts/main.js --bundle --outfile=dist/js/main.js --minify",
    "watch:all": "concurrently \"npm run watch:css\" \"npm run watch:html\"   \"npm run watch:js\"",
    "build:html": "copyfiles -u 1 \"src/*.html\" dist",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/main.css -o ./dist/css/main.css",
    "build:js": "esbuild src/scripts/main.js --bundle --outfile=dist/js/main.js --minify",
    "build": "npm run clean && npm run build:html && npm run build:css && npm run build:js",
    "watch": "npm run build && concurrently \"npm run watch:all\" \"npm-watch\"",
    "start:server": "npx http-server ./dist -o -p 3000",
    "prebuild": "npm run clean && npm run lint:fix && npm run format",
    "postinstall": "npm run build",
    "check": "npm run format:check && npm run lint"
  },
  "keywords": [],
  "author": "Leodg",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/cli": "^4.1.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "copy-and-watch": "^0.1.8",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "http-server": "^14.1.1",
    "npm-watch": "^0.11.0",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.6"
  }
}
